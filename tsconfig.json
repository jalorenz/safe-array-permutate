{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es6",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./lib",
    "incremental": true
  },
  "include": ["lib/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
